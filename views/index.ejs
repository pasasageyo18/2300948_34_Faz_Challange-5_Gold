  <!-- SUBSCRIBE -->
  <section class="subs" id="subs">
    <div class="container-fluid">
      <div class="news row">
        <div class="col-lg-4 d-lg-block d-md-none d-sm-none d-none">
          <img src="assets/skul.png" width="100%" alt="" />
        </div>
        <div class="col-lg-8 col-md-12">
          <p class="fs-3">
            Want to stay in <br />
            touch?
          </p>
          <p class="display-1">NEWSLETTER SUBSCRIBE</p>
          <p class="fs-5">
            In order to start receiving our news, all you have to do is enter
            your email address. Everything else will be taken care of by us. We
            will send you emails containing information about game. We don’t
            spam.
          </p>
          <br />
          <div class="row justify-content-between">
            <div class="col-lg-8 col-md-12">
              <div class="form-floating">
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  placeholder="Enter email"
                  name="email"
                />
                <label for="email">Your email address</label>
              </div>
            </div>
            <div class="col-lg-4 col-md-12">
              <button class="btn btn-warning fw-bold w-100">
                Subscribe Now
              </button>
            </div>
          </div>
        </div>
